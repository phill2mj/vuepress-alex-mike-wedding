{
  "include": ["./docs/.vitepress/**/*.ts", "./docs/.vitepress/**/*.mts", "./docs/.vitepress/**/*.vue", "./docs/**/*.md"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "exclude": ["**/node_modules/**", "**/dist/**", "template"]
}